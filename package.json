{
  "name": "capstone-project-be",
  "version": "1.0.0",
  "description": "the source code init in 2023/04/10",
  "main": "index.js",
  "author": "jthanh8144",
  "license": "ISC",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nodemon --legacy-watch",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "prepare": "husky install",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "rm -rf coverage && jest --coverage --silent",
    "migration:generate-mac": "typeorm-ts-node-commonjs -d ./src/shared/configs/data-source.config.ts migration:generate ./src/database/migrations/$npm_config_name",
    "migration:generate-win": "typeorm-ts-node-commonjs -d ./src/shared/configs/data-source.config.ts migration:generate ./src/database/migrations/%npm_config_name%",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/shared/configs/data-source.config.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/shared/configs/data-source.config.ts"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "hpp": "0.2.3",
    "http-errors": "2.0.0",
    "http-status-codes": "2.2.0",
    "joi": "17.9.1",
    "jsonwebtoken": "9.0.0",
    "nodemailer": "6.9.1",
    "pg": "8.10.0",
    "reflect-metadata": "0.1.13",
    "socket.io": "4.6.1",
    "typeorm": "0.3.14",
    "winston": "3.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@types/bcryptjs": "2.4.2",
    "@types/compression": "1.7.2",
    "@types/cookie-parser": "1.4.3",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/hpp": "0.2.2",
    "@types/http-errors": "2.0.1",
    "@types/jsonwebtoken": "9.0.1",
    "@types/node": "18.15.11",
    "@types/nodemailer": "6.4.7",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "eslint": "8.38.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "nodemon": "2.0.22",
    "prettier": "2.8.7",
    "ts-node": "10.9.1",
    "tsc-alias": "1.8.5",
    "typescript": "5.0.4"
  }
}
